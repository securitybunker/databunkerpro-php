{
    "name": "databunkerpro/databunkerpro-php",
    "description": "PHP client library for DatabunkerPro API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DatabunkerPro Team",
            "email": "hello@databunker.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "DatabunkerPro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DatabunkerPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
} 